<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <include file="properties.yml" relativeToChangelogFile="true"/>

    <changeSet author="${author}" id="descriptions-01">
        <createTable tableName="DESCRIPTIONS">
            <column name="ACCOUNT_ID" type="${bigint.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="${uuid.string}">
                <constraints nullable="false"/>
            </column>
            <column name="LABEL" type="${label.type}">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="${author}" id="descriptions-02">
        <addPrimaryKey columnNames="ACCOUNT_ID, UUID" constraintName="DESCRIPTIONS_PK" tableName="DESCRIPTIONS"/>
    </changeSet>

    <changeSet author="${author}" id="descriptions-03">
        <addUniqueConstraint columnNames="ACCOUNT_ID, UUID" constraintName="DESCRIPTIONS_UC" tableName="DESCRIPTIONS"/>
    </changeSet>

</databaseChangeLog>

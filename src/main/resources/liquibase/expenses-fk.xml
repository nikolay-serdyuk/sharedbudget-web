<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <include file="properties.yml" relativeToChangelogFile="true"/>

    <changeSet author="${author}" id="expenses-fk-01">
        <addForeignKeyConstraint
                constraintName="EXPENSES_CATEGORIES_FK"
                baseColumnNames="ACCOUNT_ID, CATEGORY_UUID"
                baseTableName="EXPENSES"
                referencedColumnNames="ACCOUNT_ID, UUID"
                referencedTableName="CATEGORIES"/>
    </changeSet>

    <changeSet author="${author}" id="expenses-fk-02">
        <addForeignKeyConstraint
                constraintName="EXPENSES_DESCRIPTIONS_FK"
                baseColumnNames="ACCOUNT_ID, DESCRIPTION_UUID"
                baseTableName="EXPENSES"
                referencedColumnNames="ACCOUNT_ID, UUID"
                referencedTableName="DESCRIPTIONS"/>
    </changeSet>

</databaseChangeLog>
